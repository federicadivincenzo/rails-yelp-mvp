<%= simple_form_for @restaurant do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :phone_number %>
<%= f.input :category, as: :collection_select, collection: ["chinese", "italian", "japanese", "french", "belgian"], selected: @restaurant.category %>
<%= f.submit "Edit restaurant ✍🏻", class: "btn btn-primary" %>
<% end %>
